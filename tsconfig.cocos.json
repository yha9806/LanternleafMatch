{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2015",
    "moduleResolution": "node",
    "lib": ["ES2015", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./assets/scripts",
    "paths": {
      "*": ["*"]
    }
  },
  "include": [
    "assets/scripts/**/*"
  ],
  "exclude": [
    "node_modules",
    "library",
    "local",
    "temp",
    "build"
  ]
}
